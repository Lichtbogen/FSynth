{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "0.1.0",
  "tasks": [
    {
      "taskName": "build",
      "command": "make",
      "isShellCommand": true,
      "isBuildCommand": true,
      "showOutput": "always",
      "args": ["all"],
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "$workspaceRoot"],
        "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
        }
      }
    },
    {
      "taskName": "build debug",
      "command": "make",
      "isShellCommand": true,
      "isBuildCommand": true,
      "showOutput": "always",
      "args": ["debug"],
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "$workspaceRoot"],
        "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
        }
      }
    },
    {
      "taskName": "build release",
      "command": "make",
      "isShellCommand": true,
      "isBuildCommand": true,
      "showOutput": "always",
      "args": ["release"],
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "$workspaceRoot"],
        "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
        }
      }
    }
  ]
}
